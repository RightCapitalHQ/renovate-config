{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "minimumReleaseAge": "7 days",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["* 9-10 * * 1"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["@rightcapital/*"],
      "minimumReleaseAge": null
    },
    {
      "groupName": "RightCapital Frontend Style Guide monorepo",
      "matchSourceUrls": [
        "https://github.com/RightCapitalHQ/frontend-style-guide"
      ]
    },
    {
      "groupName": "jscpd monorepo",
      "matchSourceUrls": ["https://github.com/kucherenko/jscpd"]
    },
    {
      "groupName": "Strip.js packages",
      "matchPackageNames": ["@stripe/stripe-js", "@stripe/react-stripe-js"]
    }
  ]
}
